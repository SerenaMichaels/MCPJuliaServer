# PostgreSQL Configuration
# Copy this file to .env and update with your actual values
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=postgres

# File Server Configuration  
MCP_FILE_SERVER_BASE=/opt/mcp-data
# On Windows: MCP_FILE_SERVER_BASE=C:\\mcp-data
# On WSL: MCP_FILE_SERVER_BASE=/mnt/c/mcp-data

# Julia Configuration
JULIA_PATH=/usr/local/bin/julia
# On custom installation: JULIA_PATH=/opt/julia/bin/julia

# Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=3000
MCP_LOG_LEVEL=INFO